#!/bin/sh
echo "üîê Restaurando clave privada desde PRIVATE_KEY_B64..."

if [ -n "$PRIVATE_KEY_B64" ]; then
    mkdir -p keys
    echo "$PRIVATE_KEY_B64" | base64 -d > keys/private_key.pem
    chmod 600 keys/private_key.pem
    echo "‚úÖ Clave privada restaurada en keys/private_key.pem"
else
    echo "‚ö†Ô∏è PRIVATE_KEY_B64 no est√° definido. Clave no restaurada."
fi
