{
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  },
  "name": "swiftapi4",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": ".."
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "",
  "postCreateCommand": "",
  "postAttachCommand": "",
  "containerEnv": {
    "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/swiftapi4" // Apunta a localhost
  },
  "portsAttributes": {
    "8000": {
      "label": "Application"
    },
    "5432": {
      "label": "PostgreSQL"
    }
  },
  "forwardPorts": [8000, 5432] // Aseg√∫rate de exponer ambos puertos
}